<div class="perk-card">
  <div class="perk-card-left-item" style="background-color: <%= business.business_category.color %>;">
    <div class="perk-card-absolute-photo" style="background-image: url('<%= perk.picture.present? ? perk.picture.url(:card) : business.picture.url(:card) %>');">
      <% if index_view  %>
        <div class="perk-card-business-infos">
          <div class="pastille"><%= image_tag business.business_category.picture, size: "20x20" %></div>
          <div class="name"><%= business.name %></div>
          <div class="address"><%= address.street %>, <%= address.zipcode %> <%= address.city %></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="perk-card-right-item">
    <div class="pcri-container">
      <div class="pcri-offer">
        <div class="pcri-offer-tooltip" style="background-color: <%= business.business_category.color %>;">
          <div><%= perk.offer_type? %></div>
        </div>
        <div class="pcri-offer-flash">
          <% if perk.times > 0 %>
            <span><i class="fa fa-flash pastille" style="background-color: #3F3F3F;" aria-hidden="true"></i><%= perk.times - Use.where(perk_id: perk.id).count %> restants</span>
          <% end %>
        </div>
      </div>
      <div class="pcri-item">
        <div class="pcri-item-name perk-title"><%= perk.name %></div>
        <div class="pcri-item-text"><%= truncate(perk.description, length: 175) %></div>
      </div>
      <div class="pcri-uses">
        <% if perk.uses.count == 1 %>
          <div class="pastille" style="background-color:<%= business.business_category.color %>;">
            <i class="fa fa-heart" aria-hidden="true"></i>
          </div>
          <div><%= "#{perk.uses.count} personne a utilisé ce bon plan" %></div>
        <% elsif perk.uses.count > 1 %>
          <div class="pastille" style="background-color:<%= business.business_category.color %>;">
            <i class="fa fa-heart" aria-hidden="true"></i>
          </div>
          <div><%= "#{perk.uses.count} personnes ont utilisé ce bon plan" %></div>
        <% end %>
      </div>
      <% if user_signed_in? %>
        <% if !perk.perk_in_time? %>
          <div class="perk-pseudo-modal-link button-disabled" id="perk-modal-use-<%= perk.id %>">Bon plan non disponible</div>
        <% elsif !perk.perk_usable?(current_user) %>
          <div class="perk-pseudo-modal-link button-disabled" id="perk-modal-use-<%= perk.id %>">Bon plan épuisé</div>
        <% else %>
          <div class="perk-pseudo-modal-link <%= index_view ? 'button-inactived' : '' %>" id="perk-modal-use-<%= perk.id %>">J'en profite</div>
        <% end %>
       <% else %>
          <div class="perk-pseudo-modal-link <%= index_view ? 'button-inactived' : '' %>" id="perk-modal-use-<%= perk.id %>">J'en profite</div>
      <% end %>
    </div>
  </div>
</div>
