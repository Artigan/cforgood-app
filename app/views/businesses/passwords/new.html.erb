<div class="connexion connexion-pro signin">
  <div class="form-card">
    <span>Réinitialiser<br>mon mot de passe</span>
    <div class="subscription-form">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :email, placeholder: 'john@doe.com', required: true, label: 'Votre email' %>
        <%= f.button :submit, "Réinitialiser le mot de passe" %>
      <% end %>
    </div>
  </div>
  <div class="col-xs-12 already-subscribed">
    <span class=""> Pas de compte ? <strong><%= link_to t(".connexion", :default => "Je m'inscris"), new_registration_path(resource_name) %></strong></span>
  </div>
</div>
