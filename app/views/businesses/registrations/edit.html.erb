<div class="container-fluid admin">
  <!-- Sub Menu Sidebar -->
  <%= render "pro/shared/sidebar" %>
  <!-- Content - Statistics -->
  <div class="dashboard">
    <div class="form-edit-container">
      <div class="form-edit">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true, authenticity_token: true ) do |f| %>
          <%= f.error_notification %>
          <%= devise_error_messages! %>
          <%= f.input :business_category_id, required: true, label: false, collection: BusinessCategory.all, hint: ("Choisissez la catégorie de votre commerce") %>
          <%= f.input :name, placeholder: 'Nom', required: true, autofocus: true, label: false %>
          <%= f.input :email, placeholder: 'Adresse email', required: true, label: false %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <br>
          <%= image_tag resource.picture.url(:thumb) %>
          <%= f.input :picture, as: :file, hint: 'Photo de votre commerce', required: true, label: false %>
          <%= image_tag resource.leader_picture.url(:thumb) %>
          <%= f.input :leader_picture, as: :file, hint: 'Votre photo', required: true, label: false %>
          <br>
          <%= f.input :street, placeholder: 'Rue', required: true, label: false %>
          <%= f.input :zipcode, placeholder: 'Code postal', required: true, label: false %>
          <%= f.input :city, placeholder: 'Ville', required: true, label: false %>
          <%= f.input :url, placeholder: 'Adresse site', label: false %>
          <%= f.input :telephone, placeholder: 'Téléphone', required: true, label: false %>
          <%= f.input :description, as: :text, placeholder: 'Description de votre commerce', required: true, label: false %>
          <%= f.input :facebook, placeholder: 'Facebook', label: false %>
          <%= f.input :twitter, placeholder: 'Twitter', label: false %>
          <%= f.input :instagram, placeholder: 'Instagram', label: false %>
          <%= f.input :online, label: "Commerce online", as: :radio_buttons, collection: [['Oui', true ], ['Non', false ]], checked: resource.online || false  %>
          <%= f.button :submit, "Sauvegarder" %>
        <% end %>
      </div>
      <div>
        <%= link_to t(".change_your_password", :default => "Changez votre mot de passe ?"), new_business_password_path(resource_name), class: "new-password" %>
      </div>
    </div>
  </div>
</div>
