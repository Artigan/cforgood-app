<div class="connexion connexion-pro signin">
  <div class="form-card">
    <span>Me connecter<br>à mon espace pro</span>
    <!-- SIGNIN FORM PRO-->
    <div class="subscription-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div id="error-code">
          <%= flash[:alert].humanize unless flash[:alert] == nil %>
        </div>
        <%= f.input :email, placeholder: 'john@doe.com', required: false, autofocus: false, label: "email*" %>
        <%= f.input :password, placeholder: '********', required: false, label: "Mot de passe*" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Se connecter" %>
        <%= link_to t(".forgot_your_password", :default => "Mot de passe oublié ?"), new_password_path(resource_name), class: "new-password" %>
      <% end %>
    </div>
  </div>
  <div class="already-subscribed">
    <span> Pas de compte ? <strong><%= link_to t(".connexion", :default => "Je m'inscris"), new_registration_path(resource_name) %></strong></span>
  </div>
</div>
