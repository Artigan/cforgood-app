<div class="container-fluid" id="bg-connexion">
  <div id="blackbox-connexion"></div>
    <div class="container mb-20">
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4 mt-100 bg-light-white">
          <div id="form-card">

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, placeholder: 'Adresse email', required: false, autofocus: true, label: false %>
                <%= f.input :password, placeholder: 'Mot de passe', required: false, label: false %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in" %>
              </div>
            <% end %>

            <%= render "businesses/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
