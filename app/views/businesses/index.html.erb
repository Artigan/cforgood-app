                    <h1><%= business.name.upcase %></h1>
                  </div>
                  <div class="col-xs-12" id="business-city">
                    <i class="fa fa-map-marker"> <%= business.city.capitalize %></i>
                  </div>
                </div>
                  <div class="row blue-colorbar">
                    <p><strong><%= business.perk.upcase %></strong></p>
                </div>
              </div>
            </div>
          </div>
