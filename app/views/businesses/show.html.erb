<%= content_for(:title) do %>
  <%= @business.name %>
<% end %>

<div class="container-fluid cforgood-background-business-show" id="business-show-header">
  <div class="mt-65">
    <div class="col-sm-8 col-sm-offset-2" id="bg-show-business-header" style="background-image: url(<%= image_url @business.picture %>)">
      <div class="blackbox-show-business"></div>
      <div class="col-sm-5 ml-5cent">
        <div class="absolute" id="name-show-header">
          <h1><%= @business.name %></h1>
        </div>
        <div class="col-sm-10 col-sm-offset-1" id="border-show-header"></div>
        <div class="absolute" id="address-show-header">
          <i class="fa fa-map-marker"><strong> <%= @business.street %>, <%= @business.city %></strong></i>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="absolute border3 ml-16cent" id="business-perk-show-header">
          <h3><%= @business.perk.upcase %></h3>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid text-center black bg-white" id="business-show-body">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="col-sm-7 text-left mt-50 mb-30 pr-2cent">
      <div id="header-perk-body">
        <div class="col-sm-4 red text-center">
          <p class="s-18 w-400"><%= @business.business_category.name.upcase %></p>
        </div>
        <div class="col-sm-4" id="border-show-body"></div>
        <div class="col-sm-3" id="links-business">
          <ul class="list-inline">
              <li id="nopadding-business">
                <a href="https://www.facebook.com/cforgood?fref=ts" class="link-facebook-business business-icon-container" target="_blank">
                  <i class="fa fa-facebook business-icon"></i>
                </a>
              </li>

              <li id="nopadding-business">
                <a href="https://twitter.com/CforGood" class="link-instagram-business business-icon-container" target="_blank">
                  <i class="fa fa-twitter business-icon"></i>
                </a>
              </li>

              <li id="nopadding-business">
                <a href="https://instagram.com/cforgood/" class="link-mail-business business-icon-container" target="_blank">
                  <i class="fa fa-instagram business-icon"></i>
                </a>
              </li>

              <li id="nopadding-business">
                <a href="https://fr.linkedin.com/company/cforgood" class="link-website-business business-icon-container" target="_blank">
                  <i class="fa fa-linkedin business-icon"></i>
                </a>
              </li>

          </ul>
        </div>
      </div>
      <div class="clear"></div>
      <div id="description-perk-body">
        <p><%= @business.description %></p>
      </div>
      <div id="details-perk-body">
        <p class="col-sm-4 red text-center s-18 w-400">DETAILS DU BON PLAN</p>
        <div class="clear"></div>
        <p class="mt-10"><%= @business.detail %></p>
      </div>
    </div>

    <div class="col-sm-5 mt-50 mb-30" id="info-business-show-body">
      <!-- <div class="col-sm-12" id="bg-show-business-body" style="background-image: url(<%= image_url @business.picture %>)">
        <div class="blackbox-show-business"></div>
        <p><%= @business.telephone %></p>
        <p><%= @business.email %></p>
      </div>
    </div> -->
    <div class="col-sm-6 col-sm-offset-3 mt-70">
      <i class="fa fa-map-marker"><strong> <%= @business.telephone %></strong></i>
    </div>
    <div class="col-sm-6 col-sm-offset-3 mt-30">
      <i class="fa fa-map-marker"><strong> 9h - 18h</strong></i>
    </div>
    <div class="col-sm-6 col-sm-offset-3 mt-30">
      <i class="fa fa-map-marker"><strong> Du Lundi au Samedi</strong></i>
    </div>
  </div>
</div>