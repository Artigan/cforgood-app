<% content_for :meta_title, @business.name %>
<% content_for :meta_description, "Découvrez le Bon Plan offert par #{@business.name} !" %>
<% content_for :meta_image, @perk.picture.present? ? @perk.picture : @business.picture %>




<%= render "member/dashboard/shared/sidebar" %>



























<div class="fullpage">

  <div class="fullpage-left-item">
    <div class="colored-banner" style="background-color: <%= @business.business_category.color %>;">
      <div class="banner-business-name">
        <div><%= @business.name %></div>
      </div>
      <div class="banner-business-top-infos">
        <div class="infos-left">
          <div class="category-icon"></div>
          <div class="category-name"><%= @business.business_category.name %></div>
        </div>
        <div class="infos-right">
          <div class="dot-state"></div>
          <div class="dot-state-name">Ouvert</div>
        </div>
      </div>
      <div class="card-abs-banner">
          <div class="card-photo" style="background-image: url('<%= @business.picture %>');"></div>
        <div class="card-bottom-links">
          <div class="card-bottom-left-item" style="background-color: <%= @business.business_category.color %>;">
            <div class="card-red-heart">
              <i class="fa fa-heart" aria-hidden="true"></i>
            </div>
            <div class="firstblock-text"><%= "63 personnes" %></div>
          </div>
          <div class="card-bottom-right-item">
            <div class="cbri-firstblock">
              <div class="firstblock-text">Partager :</div>
            </div>
            <div class="cbri-middleblock">
              <i class="fa fa-facebook" aria-hidden="true"></i>
            </div>
            <div class="cbri-endblock">
              <i class="fa fa-twitter" aria-hidden="true"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="fullpage-left-item-bottom">
      <div class="">
        <div class="title-sub">Leurs engagements</div>
      </div>
      <div class="flib-engages">
        <div class="flib-engages-item">
          <div class="flib-icon"></div>
          <div class="flib-text">Eco-responsable</div>
        </div>
        <div class="flib-engages-item">
          <div class="flib-icon"></div>
          <div class="flib-text">Zéro déchets</div>
        </div>
        <div class="flib-engages-item">
          <div class="flib-icon"></div>
          <div class="flib-text">Circuit court</div>
        </div>
      </div>
      <div class="">
        <div class="title-sub">En quelques mots</div>
      </div>
      <% if @business.description.present? %>
        <div class="business-desc">
          <%= @business.description %>
        </div>
      <% else %>
        <div class="business-desc">Profil en construction</div>
      <% end %>
      <div class="">
        <div class="title-sub">Informations</div>
      </div>
    </div>
  </div>

  <div class="fullpage-right-item hidden-xs">
    <div class="fri-header">
      <div class="biz-avatar" style="background-image: url('<%= @business.business_category.picture %>');"></div>
      <div class="title-sub" style="margin-bottom: 0px;">Nos bons plans</div>
    </div>
    <div class="perk-card-container">
      <div class="perk-card">
        <div class="perk-card-left-item" style="background-color: <%= @business.business_category.color %>;">
          <div class="perk-card-absolute-photo"></div>
        </div>
        <div class="perk-card-right-item">

          <div class="pcri-container">
            <div class="pcri-item">
              <div class="pcri-item-tooltip" style="background-color: <%= @business.business_category.color %>;">
                <div>OFFERT</div>
              </div>
            </div>
            <div class="pcri-second-item">
              <div class="pcri-si-text">DEUX CONTENANTS OFFERTS</div>
            </div>
            <div class="perk-pseudo-modal-link">J'EN PROFITE</div>
          </div>

        </div>
      </div>
    </div>
  </div>


</div>




