<%= content_for(:title) do %>
  <%= @business.name %>
<% end %>
<%= content_for(:description) do %>
  Découvrez le Bon Plan offert par <%= @business.name %> !
<% end %>

<div class="container-fluid admin">
  <!-- Sub Menu Sidebar -->
  <%= render "member/dashboard/shared/sidebar" %>
  <!-- Content - Statistics -->
  <div class="dashboard dashboard-perk">
    <!-- OVERLY ON MENU ACTIVATION -->
    <div class="mobile-menu-overlay hidden"></div>
    <div class="side-menu-overlay hidden"></div>

    <% @business.perks.find(params[:perk_id]).update_nb_view! if user_space? %>

    <div class="show-mobile">
      <!-- PERK MENU -->
      <div class="switch-tab">
        <span class="switch-active"></span>
        <button class="switch-button active-case">Bon plan</button>
        <button class="switch-button"><%= truncate(@business.name, length: 18) %></button>
      </div>

      <!-- PERK CARDS -->
      <div class="flip-container">
        <div class="flipper">
          <figure class="front">
          <!-- PERK IMAGE - CHANGE BACKGROUND IMAGE -->
          <% if @business.perks.find(params[:perk_id]).picture? %>
          <div class="perk-image" style="background-image: url('<%= image_url @business.perks.find(params[:perk_id]).picture %>');">
          <% else %>
          <div class="perk-image" style="background-image: url('<%= image_url @business.picture %>');">
          <% end %>

          <!-- IF FLASH PERK -->
          <% if @business.perks.find(params[:perk_id]).flash? %>
            <span class="flash-notification" style="background-color: <%= BusinessCategory.find(@business.business_category_id).color %>;"><i class="fa fa-flash"></i><%= @business.perks.find(params[:perk_id]).times - Use.count  %> restants</span>
            <span class="availabilities">Valable du <%= @business.perks.find(params[:perk_id]).start_date.try(:strftime, '%d %b.') %> au <%= @business.perks.find(params[:perk_id]).end_date.try(:strftime, '%d %b. %Y') %></span>
          <% end %>
          <h1><%= @business.perks.find(params[:perk_id]).perk %></h1>
          <p><%= @business.perks.find(params[:perk_id]).description %></p>
          <div class="use-perk">
            <%# if current_user.member %>
              <% if @business.perks.find(params[:perk_id]).perk_usable?(current_user) %>
               <!--  <button type="button" class="use-button" data-toggle="modal" data-target="#codeModal" style="background-color: <%#= BusinessCategory.find(@business.business_category_id).color %>;">J'en profite</button> -->
                <button type="button" class="use-button" style="background-color: <%= BusinessCategory.find(@business.business_category_id).color %>;">J'en profite</button>
              <% else %>
                <div id="button-used">
                  <button class="empty">Bon plan épuisé</button>
                </div>
              <% end %>
            <%# end %>
          </div>
        </div>

        <div class="perk-owner">
          <div class="owner-details">
            <% if @business.leader_picture.present? %>
              <%= image_tag image_url @business.leader_picture %>
            <% else %>
              <%= image_tag image_url @business.picture %>
            <% end %>
            <span>Rendez-vous chez <%= @business.name %><br><small><%= @business.leader_first_name %> vous accueillera.</small></span>
          </div>
          <div id="map-perk" style="width: 100%;"></div>
          <span class="business-address"><i class="fa fa-map-marker"></i><%= @business.street %>, <%= @business.zipcode %> <%= @business.city %></span>
        </div>
      </figure> <!-- END FRONT CARD -->

      <figure class="back"><!-- BACK CARD -->
        <div class="business-card">
          <!-- BACKGROUND IMAGE -->
          <div class="perk-image" style="background-image: url('<%= image_url @business.picture %>');">
            <%= image_tag image_url @business.leader_picture %>
            <h1><%= @business.name %></h1>
          </div>

          <div class="profile-card">
            <div class="profile-business">
              <% if @business.name.present? && @business.description.present? %>
                <h3>En quelques mots</h3>
                <p><%= @business.description %></p>
              <% else %>
                <p>Profil en construction</p>
              <% end %>
              <!-- LINKS | FIND THEM -->
              <%= render "pro/dashboard/shared/business_links" %>
            </div>
            <!-- SECOND SLIDE -->
            <div class="profile-owner">
              <% if @business.leader_description.present? %>
                <h3>Qui se cache derrière ?</h3>
                <p><%= @business.leader_description %></p>
              <%end %>
            </div>
          </div>
        </div>
      </figure><!-- END BACK CARD -->
    </div>
  </div>
</div><!-- END SHOW MOBILE -->

  <div class="show-desktop">
    <!-- COLUMN LEFT -->
    <div class="perk-details">
       <!-- BLOCK PERK -->
        <% if @business.perks.find(params[:perk_id]).picture? %>
          <div class="perk-image" style="background-image: url('<%= image_url @business.perks.find(params[:perk_id]).picture %>');">
        <% else %>
          <div class="perk-image" style="background-image: url('<%= image_url @business.picture %>');">
        <% end %>

        <!-- IF FLASH PERK -->
        <% if @business.perks.find(params[:perk_id]).flash? %>
          <span class="flash-notification" style="background-color: <%= BusinessCategory.find(@business.business_category_id).color %>;"><i class="fa fa-flash"></i><%= @business.perks.find(params[:perk_id]).times - Use.count  %> restants</span>
          <span class="availabilities">Valable du <%= @business.perks.find(params[:perk_id]).start_date.try(:strftime, '%d %b.') %> au <%= @business.perks.find(params[:perk_id]).end_date.try(:strftime, '%d %b. %Y') %></span>
        <% end %>
        <h1><%= @business.perks.find(params[:perk_id]).perk %></h1>
        <p><%= @business.perks.find(params[:perk_id]).description %></p>
        <div class="use-perk">
          <%# if current_user.member %>
            <% if @business.perks.find(params[:perk_id]).perk_usable?(current_user) %>
             <!--  <button type="button" class="use-button" data-toggle="modal" data-target="#codeModal" style="background-color: <%#= BusinessCategory.find(@business.business_category_id).color %>;">J'en profite</button> -->
              <button type="button" class="use-button" style="background-color: <%= BusinessCategory.find(@business.business_category_id).color %>;">J'en profite</button>
            <% else %>
              <div id="button-used">
                <button class="empty">Bon plan épuisé</button>
              </div>
            <% end %>
          <%# end %>
        </div>
      </div>
      <!-- BLOCK MAP -->
      <div class="perk-map">
        <div id="map-perk-desktop" style="width: 100%;"></div>
        <span class="business-address"><i class="fa fa-map-marker"></i><%= @business.street %>, <%= @business.zipcode %> <%= @business.city %></span>
      </div>
    </div>

    <!-- COLUMN RIGHT -->
    <div class="business-details">

      <div class="business-misc">
        <div class="perk-image" style="background-image: url('<%= image_url @business.picture %>');">
          <%= image_tag image_url @business.leader_picture %>
          <h1><%= @business.name %></h1>
        </div>

        <div class="profile-card">
          <div class="profile-business">
            <% if @business.name.present? && @business.description.present? %>
              <h3>En quelques mots</h3>
              <p><%= @business.description %></p>
            <% else %>
              <p>Profil en construction</p>
            <% end %>
          </div>
          <!-- SECOND SLIDE -->
          <div class="profile-owner">
            <% if @business.leader_description.present? %>
              <h3>Qui se cache derrière ?</h3>
              <p><%= @business.leader_description %></p>
            <%end %>
          </div>
        </div>
        <div class="business-contact">
          <%= render "pro/dashboard/shared/business_links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- MODAL CODE PERK -->
<!-- /////  CODE EN COMMENTAIRE LE TEMPS DE LA BETA /////  -->
<%# if !current_user.member %>
  <%#= render "pro/perks/modals/code_perk_not_member" %>
<%# elsif @business.online %>
<% if @business.online %>
  <%= render "pro/perks/modals/code_perk_online" %>
<% elsif device_type == :mobile %>
  <%= render "pro/perks/modals/code_perk_offline_mobile" %>
<% else %>
  <%= render "pro/perks/modals/code_perk_offline_desktop" %>
<% end %>

<% content_for(:after_js) do %>

  <%= render 'components/map_perk_show', geojson: @geojson, latitude:  @business.latitude, longitude:  @business.longitude %>
  <%= render 'components/map_perk_show_desktop', geojson: @geojson, latitude:  @business.latitude, longitude:  @business.longitude %>
  <script type="text/javascript">setRoutePathFromLocation()</script>

  <script>

    $('.switch-button').click(function() {
      $('.switch-active').toggleClass('activated');
      $('.flipper').toggleClass('flipped');
    });

    // $(document).ready(function() {
    //   $("#button-used").popover({
    //     html: true,
    //     container: "body",
    //     trigger: "hover"
    //   });
    // });

    $(document).ready(function() {

      $(".use-button").click(function() {
        $('.use-overlay').removeClass('hidden');
      });

      $(".close-button").click(function() {
        $('.use-overlay').addClass('hidden');
      });

    });

  </script>
<% end %>
