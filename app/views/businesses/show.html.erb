    $(".mobile-perks-list").click(function () {
        $('.perk-modal-mobile-member').removeClass("hidden");
    });

    $('.perk-carddd.available').click(function () {
        var classModal = $(this).attr('id');
        $('.' + classModal).removeClass("hidden");
    });
