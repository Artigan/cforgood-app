<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2><%= t(".sign_in", default: "Sign in") %></h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :name, autofocus: true, :class => "validate", :placeholder => "Nom" %>
          <%= f.input :email, required: true, :class => "validate", :placeholder => "Email" %>
          <%= f.input :password, required: true, :class => "validate", :placeholder => "Mot de passe" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <%= f.button :submit, t(".sign_in", default: "Sign in"), class: "btn btn-primary" %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>