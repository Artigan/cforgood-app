 <div class="form-card">
  <!-- SIGNUP FORM USER -->
  <div class="subscription-form">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <i><%= render "shared/icons/profile" %></i>
      <div id="error-code">
        <%= flash[:alert].humanize unless flash[:alert] == nil %>
      </div>
      <%= f.input :first_name, placeholder: 'PrÃ©nom', required: true, label: false %>
      <%= f.input :last_name, placeholder: 'Nom', required: true, label: false %>
      <%= f.input :email, placeholder: 'Adresse email', required: true, label: false %>
      <%= f.input :password, placeholder: '********', required: true, label: false %>
      <%= f.input :city, placeholder: 'Ville', required: true, label: false %>

      <div class="subscribe-disclaimer">
        <p>En cliquant sur <strong>S'inscrire</strong> ou <strong>Facebook</strong> vous acceptez les <a type="href" class="" data-toggle="modal" data-target="#modal-cgu"><strong>CGU</strong></a> et certifiez avoir de plus de 18 ans.</p>
      </div>

      <%= f.button :submit, "S'inscrire", class: "btn btn-connexion hint--top", :"data-hint" => "En cliquant sur S'inscrire ou Facebook vous acceptez les CGU et certifiez avoir de plus de 18 ans." %>
    <% end %>
  </div>
  <!-- FB & GOOGLE SUBSCRIPTION BUTTONS -->
  <div class="subscription-network">
    <span>ou</span>
    <%= link_to raw("<i class='fa fa-facebook' aria-hidden='true'></i>Se connecter avec Facebook"), user_omniauth_authorize_path(:facebook), class: "btn btn-connexion" %>
    <%#= link_to raw("<i class=\"fa fa-google\">Google</i>"), user_omniauth_authorize_path(:google_oauth2), class: "btn-google" %>
  </div>
</div>

<% content_for :after_js do %>

  <script>

    $(document).ready(function() {

      $("#new_user").validate({
        lang: 'fr',
        rules: {
          first_name: {
            required: true,
          },
          last_name: {
            required: true,
          },
          city: {
            required: true
          }
        }
      });

    });

  </script>

  <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=<%= ENV['GOOGLE_API_KEY'] %>"></script>

<% end %>


