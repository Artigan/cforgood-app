<% content_for :meta_title, "Inscription - CforGood" %>
<% content_for :meta_description %>
<% content_for :meta_image %>

<div class="container-fluid">
<div class="form-card">
  <span>Je souhaite offrir un abonnement annuel de 50€ !</span>
  <!-- SIGNUP FORM USER -->
  <div class="subscription-form">
    <%= simple_form_for User.new, url: registration_path(:user) do |f| %>

      <div id="error-code">
        <%= flash[:alert].humanize unless flash[:alert] == nil %>
      </div>

      <%= f.input :first_name, placeholder: 'Prénom', required: true, label: false %>
      <%= f.input :last_name, placeholder: 'Nom', required: true, label: false %>
      <%= f.input :email, placeholder: 'Adresse email', required: true, label: false %>
      <%= f.input :password, as: :hidden, input_html: { value: "NOEL2015" } %>
      <%= f.input :city, placeholder: 'Ville', required: true, label: false %>
      <%= f.input :zipcode, as: :hidden %>
      <%= f.input :cause_id, as: :hidden, input_html: { value: "1" }%>
      <%= f.input :amount, as: :hidden, input_html: { value: "50" } %>
      <%= f.input :subscription, as: :hidden, input_html: { value: "Y" } %>
      <%= f.button :submit, "S'inscrire", class: "btn btn-connexion hint--top btn-user-connexion", :"data-hint" => "En cliquant sur S'inscrire ou Facebook vous acceptez les CGU et certifiez avoir de plus de 18 ans." %>
    <% end %>
  </div>
  <div class="subscribe-disclaimer">
    <p>En cliquant sur <strong>S'inscrire</strong> ou vous acceptez les <a type="href" class="" data-toggle="modal" data-target="#modal-cgu"><strong>CGU</strong></a> et certifiez avoir de plus de 18 ans.</p>
  </div>
</div>

<!-- MODAL CGU CFORGOOD -->
<%= render "components/modals/signup_cgu" %>

<% content_for :after_js do %>

  <script>

    $(document).ready(function() {

      var placesAutocomplete = places({
        container: document.querySelector('#user_city'),
        type: 'city',
        aroundLatLngViaIP: false,
        templates: {
          value: function(suggestion) {
            return suggestion.name;
          }
        }
      });

      placesAutocomplete.on('change', function resultSelected(e) {
        document.querySelector('#user_zipcode').value = e.suggestion.postcode || '';
      });

      $("#new_user").validate({
        lang: 'fr',
        rules: {
          first_name: {
            required: true,
          },
          last_name: {
            required: true,
          },
          city: {
            required: true
          }
        }
      });

      $('.btn-user-connexion').on('click', function(e) {
        if ( $('#user_zipcode').val() == "" || $('#user_zipcode').val() == null ) {
          e.preventDefault();
          $("#error-code").html('Sélectionnez une ville existante !');
        }
      });
    });

</script>

<% end %>
