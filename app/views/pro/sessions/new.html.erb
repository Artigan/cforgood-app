<div class="container-fluid connexion signin connexion-pro">
  <div class="connexion-overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4 form-card">
        <span>Me connecter<br>à mon espace pro</span>
        <!-- SIGNIN FORM PRO-->
        <div class="subscription-form">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.input :email, placeholder: 'Adresse email', required: false, autofocus: true, label: false %>
            <%= f.input :password, placeholder: 'Mot de passe', required: false, label: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, "Log in" %>
            <%= link_to t(".forgot_your_password", :default => "Mot de passe oublié ?"), new_password_path(resource_name), class: "new-password" %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-12 already-subscribed">
        <span class=""> Pas de compte ? <strong><%= link_to t(".connexion", :default => "Je m'inscris"), new_registration_path(resource_name) %></strong></span>
       </div>
    </div>
  </div>
</div>
