<div class="row">

    <%= simple_form_for [:pro, @business, @perk] do |f| %>
    <%= f.error_notification %>
      <%= f.input :perk, label: false, placeholder: "Nom de votre Bon Plan", required: true %>
      <%= f.input :description, label: false, placeholder: "Décrivez votre Bon Plan", required: true %>
      <%#= f.input :periodicity_id, label: "Périodicité", collection: Periodicity.all %>
      <%= f.input :times, label: "Nombre de fois possible", input_html: { min: 0 } %>
      <%= f.input :permanent, as: :radio_buttons, label: false, collection: [['Permanent', true], ['Flash', false ]], input_html: { "id" => "radio-check" }%>
      <%= f.input :start_date, as: :string, label: 'Début de validité', :input_html => {"data-provide" => "datepicker"} %>
      <%= f.input :end_date, as: :string, label: 'Fin de validité', :input_html => {"data-provide" => "datepicker"} %>
      <%= f.input :active, as: :boolean, checked_value: true, unchecked_value: true %>
      <%= f.button :submit, 'Créer', class: "btn-create" %>
    <% end %>

</div>
