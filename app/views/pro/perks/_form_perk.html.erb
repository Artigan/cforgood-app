<%= simple_form_for [:pro, @business, @perk], html: { id: :test } do |f| %>
<%= f.error_notification %>
  <%= f.input :perk, label: "Nom du bon plan", placeholder: "I feel good", required: true %>
  <%= f.input :description, label: "Description", placeholder: "Dites-nous tout...", required: true, :input_html => { :rows => 6 } %>
  <%= f.input :detail, label: "Détail", placeholder: "Venez nous présenter votre carte" %>
  <%= f.input :permanent, label: "Type du plan", as: :radio_buttons, collection: [['Permanent', true ], ['Flash', false ]], checked: @perk.permanent %>
  <%= f.input :times, as: :string, label: false, placeholder: "Récurrence", input_html: { min: 0, class: "recurrence_hidden"} %>
  <%= f.input :periodicity_id, label: false, collection: Periodicity.all, label_method: :period, value_method: :id, include_blank: 'Choisissez une périodicité', input_html: {class: "recurrence_hidden"} %>
  <%= f.input :start_date, as: :string, label: false, placeholder: "Début", input_html: {"data-provide" => "datepicker", "data-date-language" => "fr", class: "date_hidden"} %>
  <%= f.input :end_date, as: :string, label: false, placeholder: "Fin", :input_html => {"data-provide" => "datepicker", "data-date-language" => "fr", class: "date_hidden", } %>
  <%= f.button :submit, 'Enregistrer', class: "btn-create" %>
<% end %>


