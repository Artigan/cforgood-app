<div class="use-overlay hidden">
  <div class="flip-container-mobile">
    <div class="flipper-mobile">
      <!-- FRONT CARD-->
      <figure class="front">
        <!-- CLOSE BUTTON-->
        <button type="button" class="close-button">&times;</button>
        <!-- ILLUSTRATION-->
        <div class="wrapper">
          <%= render "shared/icons/hand_perk" %>
        </div>
        <!-- CTA -->
        <div class="itinary">
          <%= link_to "http://maps.google.com/maps", class: "", id:"link-map", disabled: true, data: { locale: I18n.locale, destination: { latitude: latitude, longitude: longitude } }, :target => "_blank" do %>
            <i class="fa fa-location-arrow"></i><abbr><%= street %>, <%= zipcode %> <%= city %></abbr>
          <% end %>
        </div>

        <!-- INPUT CODE PERK -->
        <div class="container-code">
          <p class="box-code-legend">Demandez le code au commer√ßant pour profiter du bon plan :</p>
          <div id="error-code"></div>
          <%= simple_form_for(:code, url: perk_uses_path(params[:perk_id]), method: :post, remote: true, authenticity_token: true, html: { id: :create_use }) do |f| %>
            <%= f.input :perk_code, placeholder: "Saisissez le code", label: false, input_html: { id: :perk_code }  %>
            <%= f.submit "Validez", class: "validation" %>
          <% end %>
        </div>
      </figure>

      <!-- BACK CARD -->
      <figure class="back">
        <div class="member-card">
          <div class="validation-date">
            <span>Le <%= DateTime.now.strftime('%d %b. %Y') %></span>
          </div>

          <div class="logo">
            <%= image_tag 'logo-classic.png' %>
          </div>

          <div class="member-info">
            <%= image_tag (current_user.picture? ? current_user.picture(:thumb) : "profile.png"), class: "img-circle user"%>
            <% if current_user.name.present? %>
              <span class="user"><%= current_user.name %></span>
            <% else %>
              <span class="user"><%= current_user.first_name %> <%= current_user.last_name %></span>
            <% end %>
            <% if current_user.cause_id.present? %>
                <span class="cause"><%= current_user.cause.name %></span>
                <%= image_tag (current_user.cause.logo), class: "img-circle cause" %>
            <% end %>
          </div>
        </div>
      </figure>
    </div>
  </div>
</div>
