<%= content_for(:title) do %>
<%= @business.name %>
<% end %>
<%= content_for(:description) do %>
Consultez vos chiffres
<% end %>

<div class="container-fluid admin">
  <% if !current_business.active %>
    <%= image_tag('dashboard_business_inactive.png', class: 'whitebox-business-blur') %>
    <%= link_to destroy_user_session_path, method: :delete do %>
      <div class='whitebox-business-msg'>
        <p>Nous sommes actuellement en BETA,<br> votre espace sera très prochainement actif !</p>
        <%= image_tag('icons/signout.png', :class => 'signout-icon') %><%= t ".se_déconnecter", default: "À bientôt" %>
      </div>
    <% end %>
  <% else %>
    <!-- Sub Menu Sidebar -->
    <%= render "pro/dashboard/shared/sidebar" %>
    <!-- Content - Statistics -->
    <div class="dashboard">
      <div class="mobile-menu-overlay hidden"></div>
      <div class="mobile-title">
        <%= image_tag('logopouce.png', class: '') %>
        <span>Bienvenue <%= current_business.name %></span>
      </div>
      <div class="data-container">
        <ul class="data-desktop">
          <li>
            <span class="number"><%= @business.perks.count %></span>
            <span class="label">Bons plans créés</span>
          </li>
          <li>
            <span class="number"><%= @business.perks_uses_count %></span>
            <span class="label">Bons plans utlisés</span>
          </li>
          <li>
            <span class="number"><%= @business.perks_views_count %></span>
            <span class="label">Nombre total<br>de vues</span>
          </li>
          <li>
            <span class="number"><%= @business.perks_new_users %></span>
            <span class="label">Nouveaux clients</span>
          </li>
        </ul>
        <!-- SLICK | DATA ON MOBILE -->
        <div class="business-into" style="background-image: url('<%= current_business.picture %>');">
          <%= image_tag current_business.leader_picture, class: 'business-owner' %>
          <span class="business-name"><%= current_business.name %></span>
          <span class="business-location"><i class="fa fa-map-marker"></i><%= current_business.city %></span>
        </div>
        <div class="business-dashboard">
          <ul class="data-mobile">
            <li>
              <span class="number"><%= @business.perks.count %></span>
              <span class="label">Bons plans créés</span>
            </li>
            <li>
              <span class="number"><%= @business.perks_uses_count %></span>
              <span class="label">Bons plans utilisés</span>
            </li>
            <li>
              <span class="number"><%= @business.perks_views_count %></span>
              <span class="label">Nombre total de vues</span>
            </li>
            <li>
              <span class="number"><%= @business.perks_new_users %></span>
              <span class="label">Nombre nouveaux clients</span>
            </li>
          </ul>
          <div class="business-container">
            <div class="business-presentation">
              <!-- BUSINESS | DESCRIPTION -->
              <span>Description</span>
              <% if @business.description.present? %>
                <p><%= @business.description %></p>
              <% end %>
              <!-- OWNER | DESCRIPTION -->
              <% if @business.leader_description.present? %>
                <span>Qui se cache derrière ?</span>
                <p><%= @business.leader_description %></p>
              <%end %>
              <!-- LINKS | WEB -->
              <span>Sur le web </span>
              <ul>
                <% if @business.email.present? %>
                  <li>
                    <i class="fa fa-envelope business-icon"></i><i><%= @business.email %></i>
                  </li>
                <% end %>
                <% if @business.url.present? %>
                  <li>
                    <i class="fa fa-globe business-icon"></i><i><%= @business.url %></i>
                  </li>
                <% end %>
              </ul>
              <!-- LINKS | SOCIAL NETWORKS -->
              <span>Vos réseaux</span>
              <ul>
                <% if @business.facebook.present? %>
                  <li>
                    <a href="<%= @business.facebook %>" class="link-facebook-business business-icon-container" target="_blank">
                      <i class="fa fa-facebook business-icon"></i>
                    </a>
                  </li>
                <% end %>
                <% if @business.twitter.present? %>
                  <li>
                    <a href="<%= @business.twitter %>" class="link-instagram-business business-icon-container" target="_blank">
                      <i class="fa fa-twitter business-icon"></i>
                    </a>
                  </li>
                <% end %>
                <% if @business.instagram.present? %>
                  <li>
                    <a href="<%= @business.instagram %>" class="link-instagram-business business-icon-container" target="_blank">
                      <i class="fa fa-instagram business-icon"></i>
                    </a>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div id="map" class="pro-map-businesses" style="width: 82%;"></div>
      <% content_for(:after_js) do %>
        <%= render 'components/map', markers: @markers, map_id: "map" %>
      <% end %>
    </div>
  <% end %>
</div>

<% content_for :after_js do %>
  <script>

  </script>
<% end %>
