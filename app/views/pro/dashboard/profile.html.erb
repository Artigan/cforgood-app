<div class="container-fluid admin">
  <!-- Sub Menu Sidebar -->
  <%= render "pro/dashboard/shared/sidebar" %>
  <!-- Content - Statistics -->
  <div class="dashboard">
    <div class="mobile-menu-overlay hidden"></div>
    <!-- UPDATE PROFILE CONFIRMATION -->
    <%= render "pro/dashboard/shared/updated" %>
    <div class="mobile-title">
      <%= image_tag('logopouce.png', class: '') %>
      <span>Mes informations personnelles</span>
    </div>
    <div class="tab-container">
      <!-- Nav tabs -->
      <ul id="menu" class="nav nav-tabs">
        <li role="profile" class="active">
          <%= link_to "Mes informations", "#business", role: "tab", data_toggle: "tab" %>
        </li>
        <li role="profile">
          <%= link_to "Mon commerce", "#shop", role: "tab", data_toggle: "tab" %>
        </li>
        <li role="profile">
          <%= link_to "Mes horaires", "#hours", role: "tab", data_toggle: "tab" %>
        </li>
      </ul>
      <!-- Tab panes -->
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="business">
          <%= render "pro/dashboard/form/form_owner" %>
        </div>
        <div role="tabpanel" class="tab-pane" id="shop">
          <%= render "pro/dashboard/form/form_business" %>
        </div>
        <div role="tabpanel" class="tab-pane" id="hours">
          <%= render "pro/dashboard/form/form_hours" %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :after_js do %>

  <script>

    $(document).ready(function() {
      $("#menu a").click(function (e) {
        e.preventDefault();
        $(".alert").remove();
        $(this).tab('show');
      });
    });

  </script>

<% end %>
