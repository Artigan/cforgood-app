<div class="timetables-overlay hidden">
  <div class="form-edit-container">
    <div class="form-edit">
      <%= simple_form_for address do |f| %>
        <%= f.error_notification %>
        <div class="col-1">
          <% I18n.t("date.day_names").each do |day| %>
            <span class="day"><%= day %></span>
            <!-- FORM HOUR -->
            <div class="form-hour" id="<%= day %>">
              <table>
                <%= f.fields_for :timetables, (f.object.timetables.find_by_day(day) || f.object.timetables.new) do |t| %>
                  <tr>
                    <td><%= t.input :start_at_hour, label: "De", collection: pad0(0..23), selected: pad0(t.object.start_at_hour) %></td>
                    <td><%= t.input :start_at_min, label: ":", collection: pad0([0, 15, 30, 45]), selected: pad0(t.object.start_at_min) %></td>
                    <td><%= t.input :end_at_hour, label: "Ã ", collection: pad0(0..23), selected: pad0(t.object.end_at_hour) %> </td>
                    <td><%= t.input :end_at_min, label: ":", collection: pad0([0, 15, 30, 45]), selected: pad0(t.object.end_at_min) %> </td>
                  </tr>
                <% end %>
              </table>
            </div>
          <% end %>
        </div>
        <div class="col-2">
          <%= f.button :submit, "Sauvegarder" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :after_js do %>
  <script>
    $(document).ready(function() {

    });
  </script>
<% end %>
