<div class="popup-overlay hidden">
  <div class="popup-container delete-address">
    <div class="close-popup"><i class="fa fa-times"></i></div>
    <div class="wrapper">
      <!-- ILLUSTRATION-->
      <%= render 'shared/icons/trash' %>
    </div>
    <span>Oups !</span>
    <p>Souhaitez-vous vraiment supprimer cette adresse ?</p>
    <button type="submit" id="delete-submit" class="business-button">Valider</button>
  </div>
</div>

<% content_for :after_js do %>
  <script>
    $(document).ready(function() {

      $(".close-popup").click(function (e) {
        e.preventDefault();
        $(".popup-overlay").toggleClass('hidden');
      });

      $("#delete-submit").on("click", function (e) {
        e.preventDefault();
        var addressId = $(this).attr('class').split(" ")[1];
        $('#delete_'+addressId).submit();
      });

    });
  </script>
<% end %>


