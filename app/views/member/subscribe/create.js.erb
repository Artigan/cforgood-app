
if (<%= flash[:success].present? %>) {

  $(".loader_spinner").addClass('hidden');
  $('.btn-submit').attr("disabled", false);
  $('.button-gradient').attr("disabled", false);

  if (<%= request.referer.include?("subscribe") %>) {
    $(".overlay-payment.OK").removeClass('hidden');
    window.setTimeout(function(){
    // DISCLAIMER - HIDDEN
      window.location.href = "<%= member_user_dashboard_path(current_user) %>";
    }, 3000);
  } else {
    $(".updated-done-overlay.checked").removeClass("hidden");
  }

} else {

  $(".loader_spinner").addClass('hidden');
  $('.btn-submit').attr("disabled", false);
  $(".overlay-payment.KO").removeClass('hidden');
  $('.button-gradient').attr("disabled", false);

}
