
<% if flash[:success].present? %>

  $("#loading-indicator").hide();
  $(".success-message").html("<%= flash[:success] %>");
  $(".signup-done-overlay.ok").removeClass('hidden');

<% else %>

  $("#loading-indicator").hide();
  $(".error-message").html("<%= flash[:error] %>");
  $(".signup-done-overlay.ko").removeClass('hidden');

<% end %>
