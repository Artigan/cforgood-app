<div class="signup-plan">
  <span>Choisissez le montant de votre participation</span>
   <div class="switch">
      <input id="monthly" type="radio" <%= current_user.subscription == "M" ? checked="checked" : "" %>>
      <label for="monthly" class="subscription-monthly">Mensuel</label>
      <input id="yearly" type="radio" <%= current_user.subscription != "M" ? checked="checked"  : "" %>>
      <label for="yearly" class="subscription-yearly">Annuel <span>2 mois gratuits</span></label>
      <span class="slide-button"></span>
    </div>
  <div class="container-fluid">
    <div class="offer-index">
      <div class="offer-card">
        <!-- RANGE SLIDER FOR PRICE -->
        <div class="offer-price">
          <!-- Slider Monthly -->
          <input type="range" name="range" id="range" class="monthly hidden" min="1" max="50" value="5"/>
          <!-- Slider Yearly -->
          <div id="slider" class="yearly"></div>
          <div class="offer-details">
            <div class="offer-detail">
              <output class="output-asso">50</output>
              <p>Reversé à l'association de votre choix</p>
            </div>
            <div class="offer-detail">
              <output class="output-fiscal">50</output>
              <p>Coût réel de votre don après déduction fiscale</p>
            </div>
          </div>
        </div>
        <div class="offer-description">
          <h5 class="yearly">Abonnement mensuel <strong>libre</strong> sans engagement</h5>
          <h5 class="monthly hidden">Abonnement mensuel <strong>libre</strong> sans engagement</h5>
          <p>Vous pouvez le modifier ou l'annuler à tout moment depuis votre profil</p>
          <p class="comment">Attention, nous sommes encore essentiellement sur Bordeaux, mais ça bouge ! :)</p>
        </div>
        <!-- PARTNER CODE -->
        <%= simple_form_for(current_user, url: member_update_profile_path, method: :put, remote: true, authenticity_token: true, html: { id: "update_subscription" } ) do |f| %>
          <div class="code-partner">
            <%= f.input :code_partner, label: "Code Partenaire", input_html: { value: "" } %>
          </div>

          <div class="offer-btn">
            <%= f.input :subscription, as: :hidden, input_html: { value: f.object.subscription || 'Y'  } %>
            <%= f.input :amount, label: false, input_html: { value: f.object.amount || 50 } %>
          </div>

          <%= f.submit "Je rejoins la révolution positive", class: "btn-subscription"%>
          <!-- Current partner code : <%= current_user.code_partner %> -->
        <% end %>
      </div>
    </div>
  </div>
  <div class="no-subscription">
      <%= link_to "Je la rejoindrai plus tard", member_user_dashboard_path(current_user), class: "btn btn-no-subscription after" %>
  </div>
</div>

<% content_for :after_js do %>

  <%= render 'components/js/subscription' %>

<% end %>
