<%= content_for(:title) do %>
<%#= @user.first_name %>
<% end %>
<%= content_for(:description) do %>
Autour de vous
<% end %>

<div class="container-fluid admin">
  <% if !current_user.active %>
    <%= image_tag('dashboard_user_inactive.png', class: 'whitebox-user-blur') %>
    <%= link_to destroy_user_session_path, method: :delete do %>
      <div class='whitebox-user-msg'>
        <p>Nous sommes actuellement en BETA,<br> votre espace sera très prochainement actif !</p>
        <%= image_tag('icons/signout.png', :class => 'signout-icon') %><%= t ".se_déconnecter", default: "À bientôt" %>
      </div>
    <% end %>
  <% else %>
    <!-- Sub Menu Sidebar -->
    <%= render "member/dashboard/shared/sidebar" %>
    <!-- Content - Statistics -->
    <div class="dashboard">
      <div id="map-dashboard" class="user-map-businesses" style="width: 100%;"></div>
    </div>
  <% end %>
</div>

<% content_for(:after_js) do %>
  <%= render 'components/map', markers: @markers, map_id: "map-dashboard" %>
<% end %>
