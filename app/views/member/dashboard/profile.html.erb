<% content_for :after_js do %>

  <script>

    $(document).ready(function() {
      $("#menu a").click(function (e) {
        e.preventDefault()
        $(".alert").remove();
        $(this).tab('show');
        $("#menu a.show-payment").addClass('hidden');
        $("#menu a.show-payment").tab('hide');
      });
    });

  </script>

<% end %>
