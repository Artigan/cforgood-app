


<div class="leftmenu-v2">

  <!-- USER SIGN IN -->
  <% if user_signed_in? %>

    <div class="leftmenu-v2-item <%= active_class(member_user_dashboard_path(current_user))%>">
      <%= link_to member_user_dashboard_path(current_user) do %>
        <div class="left-menu-svg-container" style="background-image: url(<%= asset_path "autourdemoi.svg" %>)"></div>
        <div class="left-menu-text">Autour de moi</div>
      <% end %>
    </div>

    <div class="leftmenu-v2-item <%= active_class(businesses_path) %>">
      <%= link_to businesses_path do %>
        <div class="left-menu-svg-container" style="background-image: url(<%= asset_path "bonplan.svg" %>)"></div>
        <div class="left-menu-text">Bons plans</div>
      <% end %>
    </div>

    <div class="leftmenu-v2-item <%= active_class(asso_causes_path) %>">
      <%= link_to asso_causes_path do %>
        <div class="left-menu-svg-container" style="background-image: url(<%= asset_path "association.svg" %>)"></div>
        <div class="left-menu-text">Associations</div>
      <% end %>
    </div>

    <div class="leftmenu-v2-item <%= active_class(member_user_ambassador_path(current_user)) %>">
      <%= link_to member_user_ambassador_path(current_user) do %>
        <div class="left-menu-svg-container" style="background-image: url(<%= asset_path "ambassadeur.svg" %>)"></div>
        <div class="left-menu-text">Ambassadeur</div>
      <% end %>
    </div>

    <!-- USER NOT SIGN IN -->
  <% else %>

    <div class="leftmenu-v2-item <%= active_class(map_path) %>">
      <%= link_to map_path do %>
        <div class="left-menu-svg-container" style="background-image: url(<%= asset_path "autourdemoi.svg" %>)"></div>
        <div class="left-menu-text">Autour de moi</div>
      <% end %>
    </div>

    <div class="leftmenu-v2-item <%= active_class(businesses_path) %>">
      <%= link_to new_member_subscribe_path do %>
        <div class="left-menu-svg-container" style="background-image: url(<%= asset_path "bonplan.svg" %>)"></div>
        <div class="left-menu-text">Bon plans</div>
      <% end %>
    </div>

    <div class="leftmenu-v2-item <%= active_class(asso_causes_path) %>">
      <%= link_to new_member_subscribe_path do %>
        <div class="left-menu-svg-container" style="background-image: url(<%= asset_path "association.svg" %>)"></div>
        <div class="left-menu-text">Associations</div>
      <% end %>
    </div>

  <% end %>

  <% if user_signed_in? %>
    <div class="signout">
      <%= link_to destroy_user_session_path, method: :delete do %>
        <%= image_tag('icons/signout.png', :class => 'signout-icon sign-out') %><%= t ".se_déconnecter", default: "À bientôt" %>
      <% end %>
    </div>
  <% end %>

</div>






<% if user_signed_in? %>
      <!-- MOBILE | OPEN MENU DROPDOWN -->
      <li id="profile-tab" class="mobile-dropdown">
        <a href="#">
          <div class="icon-container">
            <%= render "shared/icons/profile" %>
          </div>
          <span class="admin-label">Mon profil</span>
        </a>
        <%= render "components/navbar_dropdown_profile" %>
      </li>
<% end %>





<% content_for :after_js do %>
  <script>
    $(document).ready(function(){
      $('.mobile-dropdown').click(function(event) {
        $('.mobile-menu').toggleClass('hidden');
        $('.mobile-menu-overlay').toggleClass('hidden');
      });

      $('.mobile-menu-overlay').click(function(event) {
        $(this).addClass('hidden');
        $('.mobile-menu').addClass('hidden');
      });
    });
  </script>
<% end %>



