<%= render partial: 'components/modals/modal_template', locals: {id: "modal-questions", source: "https://drive.google.com/embeddedfolderview?id=0B2p2ldu_ZxjBRWkzcVcwS3dpajg#grid", style:"width:100%; height:600px; border:0;"} %>
<%= render partial: 'components/modals/modal_template', locals: {id: "modal-ideas", source: "https://drive.google.com/embeddedfolderview?id=0B2p2ldu_ZxjBRWkzcVcwS3dpajg#grid", style:"width:100%; height:600px; border:0;"} %>

<%= render(partial: 'member/prospects/form/create', locals: { prospect: Prospect.new }) %>

<% content_for :after_js do %>

  <script>

    $(document).ready(function() {

      $(".button-link-square").click(function() {
        var idModal = $(this).attr('class').split(" ")[1];
        $("#"+idModal).removeClass('hidden');
      });

      $('.button-close').click(function() {
        console.log ("yes");
        var idModal = $(this).attr('class').split(" ")[1];
        $("#"+idModal).addClass('hidden');
      });

      $('.button-link.form').click(function() {
        $(".form-create-prospect").removeClass('hidden');
      });

    });

  </script>

<% end %>

