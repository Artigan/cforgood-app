<!-- HEADER -->
<div id="header" class="landing-business">
  <!-- HEADER GRADIENT OVERLAY -->
  <div class="header-overlay"></div>
  <div class="container-fluid header-content">
    <div class="row">
      <div class="col-xs-12 text-center">
        <!-- HEADER CONTENT -->
        <%= image_tag('logopouce-white.png', :class => 'header-logo') %>
        <h1>Développez votre activité</h1>
        <p class="header-subtitle">en inspirant la solidarité</p>
