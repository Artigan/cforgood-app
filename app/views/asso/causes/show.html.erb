<%= content_for(:title) do %>
  <%= @cause.name %>
<% end %>
<%= content_for(:description) do %>
  DÃ©couvrez l'engagement de <%= @cause.name %> !
<% end %>

<div class="container-fluid admin">
  <!-- Sub Menu Sidebar -->
  <%= render "member/dashboard/shared/sidebar" %>
  <!-- Content - Statistics -->
  <div class="dashboard dashboard-causes">
    <div class="cause-container">

      <div class="cause-header" style="background-image: url('<%= image_url @cause.picture %>');">
        <img class="cause-logo" src="<%= image_url @cause.logo %>" style="border: 3px solid <%= CauseCategory.find(@cause.cause_category_id).color %>;">
        <h1><%= @cause.name %></h1>
      </div>

      <div class="cause-content" style="border-top: 3px solid <%= CauseCategory.find(@cause.cause_category_id).color %>;">

        <div class="cause-category">
          <div class="disque-item item-category" style="background-color: <%= CauseCategory.find(@cause.cause_category_id).color %>;">
              <%= image_tag image_url CauseCategory.find(@cause.cause_category_id).picture %>
          </div>
          <% if @cause.impact.present? %>
            <span style="background-color: <%= CauseCategory.find(@cause.cause_category_id).color %>;"><%= @cause.impact %></span>
          <% else %>
            <span style="background-color: <%= CauseCategory.find(@cause.cause_category_id).color %>;"><%= CauseCategory.find(@cause.cause_category_id).name %></span>
          <% end %>
        </div>

        <div class="cause-details">
          <!-- BUSINESS | DESCRIPTION -->
          <h2>En savoir plus</h2>
          <p><%= @cause.description %></p>
        </div>
        <div class="cause-info">
          <h2>Information</h2>
          <!-- LINKS | SOCIAL NETWORKS -->
          <ul class="network">
            <% if @cause.facebook.present? %>
              <li style="background-color: <%= CauseCategory.find(@cause.cause_category_id).color %>;">
                <a href="https://facebook.com/<%= @cause.facebook %>" class="link-facebook-business business-icon-container" target="_blank">
                  <i class="fa fa-facebook business-icon"></i>
                </a>
              </li>
            <% end %>
            <% if @cause.twitter.present? %>
              <li style="background-color: <%= CauseCategory.find(@cause.cause_category_id).color %>;">
                <a href="https://twitter.com/<%= @cause.twitter %>" class="link-instagram-business business-icon-container" target="_blank">
                  <i class="fa fa-twitter business-icon"></i>
                </a>
              </li>
            <% end %>
            <% if @cause.instagram.present? %>
              <li style="background-color: <%= CauseCategory.find(@cause.cause_category_id).color %>;">
                <a href="https://instagram.com/<%= @cause.instagram %>" class="link-instagram-business business-icon-container" target="_blank">
                  <i class="fa fa-instagram business-icon"></i>
                </a>
              </li>
            <% end %>
          </ul>
          <!-- LINKS | WEB -->
          <ul class="direct-contact">
             <% if @cause.telephone.present? %>
              <li>
                <a href="tel:<%= @cause.telephone %>" class="link-website-business business-icon-container" target="_blank" >
                  <i class="fa fa-phone business-icon" style="border: 1px solid <%= CauseCategory.find(@cause.cause_category_id).color %>; color: <%= CauseCategory.find(@cause.cause_category_id).color %>;"></i><span><%= @cause.telephone %></span>
                </a>
              </li>
            <% end %>
            <% if @cause.email.present? %>
              <li>
                <a href="mailto:<%= @cause.email %>" class="link-mail-business business-icon-container" target="_blank">
                  <i class="fa fa-envelope business-icon" style="border: 1px solid <%= CauseCategory.find(@cause.cause_category_id).color %>; color: <%= CauseCategory.find(@cause.cause_category_id).color %>;"></i><span><%= @cause.email %></span>
                </a>
              </li>
            <% end %>
            <% if @cause.url.present? %>
              <li>
                <a href="<%= @cause.url %>" class="link-website-business business-icon-container" target="_blank">
                  <i class="fa fa-globe business-icon" style="border: 1px solid <%= CauseCategory.find(@cause.cause_category_id).color %>; color: <%= CauseCategory.find(@cause.cause_category_id).color %>;"></i><span><%= @cause.url %></span>
                </a>
              </li>
            <% end %>
          </ul>
          <!-- INFO | ADRESSE -->
          <div class="place">
            <% if @cause.city.present? %>
              <i class="fa fa-map-marker" style="border: 1px solid <%= CauseCategory.find(@cause.cause_category_id).color %>; color: <%= CauseCategory.find(@cause.cause_category_id).color %>;"></i>
              <span><%= @cause.street %><br><%= @cause.zipcode %> <%= @cause.city %></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
