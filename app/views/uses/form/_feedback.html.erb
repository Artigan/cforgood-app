    <div class="perk-modal-feedback">
        <p>
            Avez-vous appréciez ce bon plan ?
        </p>
        <div class="radio-tile-group">
            <div class="input-container">
                <input id="like" class="radio-button" type="radio" name="radio"/>
                <div class="radio-tile">
                    <%= image_tag "heart_like.svg" %>
                </div>
            </div>
            <div class="input-container">
                <input id="unlike" class="radio-button" type="radio" name="radio"/>
                <div class="radio-tile">
                    <%= image_tag "heart_dislike.svg" %>
                </div>
            </div>
        </div>
        <div class="perk-modal-hr"><hr></div>
        <div class="input-container">
            <input id="unused" class="radio-button" type="radio" name="radio"/>
            <div class="radio-tile">
                Je n’ai pas utilisé ma carte de membre
            </div>
        </div>
    </div>

    <div class="perk-modal-valid-feedback">
        <%= simple_form_for :use, url: perk_use_path(params[:perk_id], params[:id]), method: :put do |f| %>
        <%= f.input :feedback, as: :hidden, input_html: { value: true } %>
        <%= f.input :like, as: :hidden, input_html: { value: false } %>
        <%= f.input :unlike, as: :hidden, input_html: { value: false } %>
        <%= f.input :unused, as: :hidden, input_html: { value: false } %>
        <%= f.submit "", class: "submit-feedback", :style => "display: none;" %>
        <% end %>
    </div>

</div>

<script type="text/javascript">
    $('.radio-button').click(function () {
        feedback = $('.radio-button:checked').attr('id');
        $('#use_like, #use_unlike, #use_unused').val('false');
        $('#use_' + feedback).val('true');
        $('.submit-feedback').click();
    });
</script>
