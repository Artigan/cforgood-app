<div class="perk-modal feedback">
  <div class ="card-modal-feedback">
    <div class="background-gradient-border">
      <div class="perk-modal-feedback-background-image" style="background-image: url('<%= use.perk.picture.present? ? use.perk.picture.url(:card) : use.perk.business.picture.url(:card) %>');">
        <h6>
          <%= use.perk.business.name.downcase.titleize %>
        </h6>
      </div>

      <div class= "perk-modal-feedback-text-content">
        <div class="perk-modal-feedback-perk-name">
          <p>
            <%= use.perk.name.downcase.capitalize %>
          </p>
        </div>

        <div class="perk-modal-feedback">
          <p>
            Avez-vous apprécié ce bon plan ?
          </p>
          <div class="radio-tile-group">
            <div class="input-container">
              <%= simple_form_for :use, url: perk_use_path(use.perk_id, use.id), method: :put, remote: false, authenticity_token: true do |f| %>
                <%= f.input :feedback, as: :hidden, input_html: { value: true } %>
                <%= f.input :like, as: :hidden, input_html: { value: true } %>
                <button class="like" type="submit">
                  <div class="background-border">
                    <div class="radio-tile radio-tile-like">
                      <%= image_tag "heart_like.svg" %>
                    </div>
                  </div>
                </button>
              <% end %>
            </div>
            <div class="input-container">
              <%= simple_form_for :use, url: perk_use_path(use.perk_id, use.id), method: :put, remote: false, authenticity_token: true do |f| %>
                <%= f.input :feedback, as: :hidden, input_html: { value: true } %>
                <%= f.input :unlike, as: :hidden, input_html: { value: true } %>
                <button class="unlike" type="submit">
                  <div class="background-border-unlike">
                    <div class="radio-tile radio-tile-unlike">
                      <%= image_tag "heart_dislike.svg" %>
                    </div>
                  </div>
                </button>
              <% end %>
            </div>
            <div class="perk-modal-hr"><hr></div>
            <div class="input-container unused">
              <%= simple_form_for :use, url: perk_use_path(use.perk_id, use.id), method: :put, remote: false, authenticity_token: true do |f| %>
                <%= f.input :feedback, as: :hidden, input_html: { value: true } %>
                <%= f.input :unused, as: :hidden, input_html: { value: true } %>
                <button class="unused" type="submit">
                  <div class="radio-tile">
                    <p class="unused-description">Je n’ai pas utilisé ma carte de membre</p>
                  </div>
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


