<div class="container-fluid cforgood-background" id="cause-header">
  <div class="row">
    <div class="page-title">
      <%= image_tag("heart-white.png") %>
      <h1>Causes</h1>
    </div>
  </div>
</div>

<div class="container-fluid" id="bg-cause-index">
  <div class="whitebox-cause"></div>
  <div class="col-xs-10 col-xs-offset-1 col-sm-1 ml-14cent absolute mt-30">
    <div class="btn btn-filter pl-30 pr-30">CATEGORIES <i class="fa fa-angle-down"></i></div>
  </div>
  <div class="col-xs-10 col-xs-offset-1 col-sm-1 ml-72cent absolute mt-30">
    <div class="btn btn-danger pl-30 pr-30">EN PROFITER !</div>
  </div>
  <div class="col-sm-10 col-sm-offset-1 text-center mt-70 mb-50" id="cause-index">
    <% @causes.each do |cause| %>
      <%= link_to cause_path(cause) do %>
        <div class="col-sm-4 mt-15">
          <div class="row relative cause-card" >
            <div class="bg-cause-card">
              <div class="row" id="blackbox-cause">
                <p><%= cause.category %></p>
              </div>
              <div class="row" id="info-cause">
                <div class="col-xs-12" id="cause-name">
                  <h1><%= cause.name.upcase %></h1>
                </div>
              </div>
              <div class="row blue-colorbar">
                <p><%= cause.impact.upcase %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
