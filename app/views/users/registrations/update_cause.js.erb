  if (<%= request.referer.include?("subscribe") %>) {

    // DISCLAIMER - DISPLAYED
    $("#"+<%= current_user.cause_id %>+" .love-you").removeClass("hidden").addClass('love-it');

  } else {

    // VALIDATION - HIDDEN
    // $(".popup-overlay").addClass("hidden");

    var $button = $('#submit');

    $button.val('');
    setTimeout(function(){
       $button.addClass('clicked');
    }, 300);

    $button.one('animationend webkitAnimationEnd MSAnimationEnd oAnimationEnd', function(){
      $(this).addClass('submited');
      setTimeout(function(){
        $('.dropdown').click();
        $('.asso-button-v2').toggleClass('hidden');
      }, 1500);
    });

  }
}
