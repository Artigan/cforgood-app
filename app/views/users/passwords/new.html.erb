<div class="container-fluid connexion signin connexion-user">
  <div class="connexion-overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4 form-card">
        <span>Réinitialiser<br>mon mot de passe</span>
        <div class="subscription-form">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.input :email, placeholder: 'john@doe.com', required: true, :class => "validate", label: 'Votre email' %>
            <%= f.submit t('.send_me_reset_password_instructions', :default => "Réinitialiser mon mot de passe") %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-12 already-subscribed">
        <span class=""> Pas de compte ? <strong><%= link_to t(".connexion", :default => "Je m'inscris"), new_registration_path(resource_name) %></strong></span>
      </div>
    </div>
  </div>
</div>
