  var map = new mapboxgl.Map({
    container: 'map-dashboard',
    style: 'mapbox://styles/fredpetris/cikporvjj00p8b5lwovwd3kq9',
    // style: 'mapbox://styles/mapbox/streets-v8',
    // center: ["<%#= current_user.longitude %>", "<%= current_user.latitude %>"],
    center: mapCenter(),
    zoom: 12
  });

  function mapCenter() {
     var mapCenter = [];
    if ("<%= current_user.latitude == nil %>" && "<%= current_user.longitude == nil %>") {
        console.log("vrai");
        mapCenter.push("<%= current_user.longitude %>", "<%= current_user.latitude %>");

    } else {
