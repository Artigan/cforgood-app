<div class="use-overlay">
  <div class="flip-container-mobile">
    <div class="flipper-mobile">
      <!-- FRONT CARD-->
      <figure class="front">
        <!-- CLOSE BUTTON-->
        <button type="button" class="close-button">&times;</button>
        <!-- ILLUSTRATION-->
        <div class="wrapper">
          <%= render "shared/icons/bowtie" %>
        </div>
        <!-- CTA-->
        <div class="container-code gentleman">
          <span>Bon plan offert</span>
          <p>Pour bien commencer, nous vous offrons un bon plan chez l'un de nos commer√ßants</p>
          <button class="button-gentleman first-offer" id="perk-modal-dynamic-<%= perk.id %>">J'en profite</button>
        </div>
      </figure>
    </div>
  </div>
</div>

<%= render "businesses/business_perk_show", business: perk.business, address: perk.business.main_address, perk: perk, first_offer: true %>

<% content_for :after_js do %>
  <script>
    $(document).ready(function() {

      $(".button-gentleman.first-offer").on("click", function(e) {
        var classModal = $(this).attr('id');
        $('.' + classModal).removeClass("hidden");
      });

    });
  </script>
<% end %>
