<div class="use-overlay overlay-stop-subscritpion hidden">
  <div class="flip-container-mobile">
    <div class="flipper-mobile">
      <!-- FRONT CARD-->
      <div class="border-gradient">
        <figure class="front">
          <!-- CLOSE BUTTON-->
          <button type="button" class="close-button close-stop-subscription">&times;</button>
          <div class="member-card-update-profil-wrapper">
            <div class="danger-stop-subscription" style="background-color: lightgrey"></div>
          </div>
          <!-- CTA-->
          <div class="container-code gentleman">
            <div class="text-infos-not-member-yet">
              <p>Souhaitez-vous vraiment vous d√©sabonner ?</p>

              <%= simple_form_for(current_user, url: member_stop_subscription_path, method: :put, remote: true, authenticity_token: true) do |f| %>
                <%= f.submit "Valider", class: "button-gradient-not-member-yet stop-confirmation-button" %>
              <% end %>
            </div>
          </div>
        </figure>
      </div>
    </div>
  </div>
</div>

<% content_for :after_js do %>
  <script>
    $(document).ready(function () {

      $(".close-stop-subscription").click(function() {
        $('.overlay-stop-subscritpion').addClass('hidden');
      });

    });
  </script>
<% end %>


