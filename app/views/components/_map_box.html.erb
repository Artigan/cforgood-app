<div class="mapboxv2">

  <div class="caret-absolute hidden-xs" style="color: <%= business.business_category.color %>">
    <i class="fa fa-caret-up" aria-hidden="true"></i>
  </div>

  <% business.perks_in_time.each do |perk| %>
    <% if !flash || (flash && perk.flash) %>

        <%= link_to business_path(perk.business_id, perk_id: perk.id, address_id: address), class: "link-business-plus" do %>
          <span class="see-more">+</span>
        <% end %>

    <% end %>
  <% end %>

  <div class="mv2-photo" style="background-image: url('<%= business.picture.url(:thumb) %>');"></div>

  <div class="mv2-content">

    <div class="mv2-content-top" style="background-color: <%= business.business_category.color %>;">
      <div class="mv2-content-top-top">
        <div class="mv2-content-top-top-text"><%= business.name %></div>
      </div>
      <div class="mv2-content-top-bottom">
        <div class="pastille">
          <%= image_tag business.business_category.picture, size: "20x20" %>
        </div>
        <div class="mv2-content-top-bottom-text"><%= business.business_category.name %></div>
      </div>
    </div>

    <div class="mv2-content-bottom" style="background-color: <%= business.business_category.color %>;">

      <div class="mv2-content-bottom-left" style="background-color: rgba(55,55,55,0.2);">
        <% if business.perks_in_time.size == 1 %>
          <div class="available-perk-text"><%= "#{business.perks_in_time.size}" %><span> bon plan disponible </span></div>
        <% else %>
          <div class="available-perk-text"><%= "#{business.perks_in_time.size}" %><span> bons plans disponibles </span></div>
        <% end %>
      </div>

      <div class="mv2-content-bottom-right" style="background-color: rgba(55,55,55,0.2);">
        <% liked = business.perks_in_time.map { |perk| perk.uses.liked.size }.sum %>
        <% if liked > 0 %>
          <%= image_tag "icons/heart.svg", class: "red-heart"%>
          <div class="asso-firstblock-text-v2"><%= liked %></div>
        <% end %>
      </div>

    </div>
  </div>
</div>
