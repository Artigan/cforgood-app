<div class="map-box">
  <div class="box-header">
    <% if business.picture.present? %>
      <%= image_tag business.picture(:medium) %>
    <% else %>
      <div class="box-header-img" style="background-color: <%= business.business_category.color %>;">
        <%= image_tag business.business_category.picture %>
      </div>
    <% end %>
    <div class="business-details">
      <h3><%= business.name %></h3>
      <span><%= business.business_category.name %></span>
      <span><i class="fa fa-map-marker"></i><%= business.street %></span>
    </div>
  </div>
  <div class="map-list-perks">
    <div class="map-perks">
      <ul>
      <% business.perks.active.each do |perk| %>
        <% if !flash || (flash && perk.flash) %>
          <li style="box-shadow: inset -35px 0 0 0 <%= business.business_category.color %>;">
            <%= link_to business_path(perk.business_id, perk_id: perk.id), class: "see-perk" do %>
              <% if perk.picture.present? %>
                <%= image_tag perk.picture(:medium) %>
              <% end %>
              <span><%= perk.name %></span>
              <i class="fa fa-angle-right"></i>
            <% end %>
          </li>
        <% end %>
      <% end %>
      </ul>
    </div>
  </div>
</div>
