<!-- TOOGLE OVERLAY -->
<div class="search-category-overlay hidden"></div>

<!-- CATEGORIES -->
<div class="search-category">
  <span id="open-categories">
    <span id="button-filter-text"> Filtres </span>
    <i class="fa fa-search"></i>
    <span class="close-button">&times;</span>
  </span>
  <ul class="search-pannel">
    <a href="#" class="filter-category">
      <li id="categories-all" class="category-item is-selected">
        <div class="container-icon" style="background-color: #fff;">
          <%= image_tag "business_categories/allcategories.svg" %>
        </div>
        Toutes les cat√©gories
      </li>
    </a>
    <% BusinessCategory.all.each do |category| %>
    <a href="#" class="filter-category current">
      <li id="<%= "layer-"+category.marker_symbol %>" class="category-item">
        <div class="container-icon" style="border-color: <%= category.color %>;">
          <%= image_tag category.picture %>
        </div>
        <%= category.name %>
      </li>
    </a>
    <% end %>
  </ul>
</div>
