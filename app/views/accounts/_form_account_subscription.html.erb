<!-- FORM SUBSCRIPTION -->
<div class="col-xs-12 col-sm-6 col-sm-offset-3 form-card form-select-cause">
  <div class="SUBSCRIPTION">Choisissez votre abonnement</div>
  <%= simple_form_for :user, url: user_update_subscription_path(resource: current_user, resource_name: :user), remote: true, authenticity_token: true, html: { method: :put, id: :form_update_subscription } do |f| %>
    <%= f.error_notification %>
    <% if current_user.trial_done %>
      <%= f.input :subscription, label: false, as: :radio_buttons, collection:
      [["5 € par mois", "M" ], ["50 € pour un an", "A" ]], checked: "M" %>
    <% else %>
      <%= f.input :subscription, label: false, as: :radio_buttons, collection:
      [["5 € par mois", "M" ], ["50 € pour un an", "A" ], ["1 mois gratuit pour découvrir CFORGOOD !", "T"]], checked: "M" %>
    <% end %>
    <div>
      <button type="button" class="btn btn-turquoise">Prev</button>
      <%= f.button :submit, "Next", class: "submit btn btn-turquoise" %>
    </div>
  <% end %>
</div>


